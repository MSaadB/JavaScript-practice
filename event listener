function updatePage(document) {
    // Helper function to update the value span
    function addFormListener(formId, inputId, targetId) {
        const form = document.getElementById(formId);
        const input = document.getElementById(inputId);
        const targetSpan = document.querySelector(`#${targetId} .value`);

        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent form from submitting normally
            const newValue = input.value.trim();
            if (newValue !== "") {
                targetSpan.textContent = newValue;
            }
        });
    }

    // Add listeners for each form
    addFormListener("update-name", "name-input", "name");
    addFormListener("update-description", "description-input", "description");
    addFormListener("update-color", "color-input", "color");
    addFormListener("update-volume", "volume-input", "volume");
}

// This is how your code will be called.
// Your answer should be the HTML output described in the challenge text.
// You can edit this code to try different testing cases.
const inputs = [
    { id: "name-input", value: "Adventure Backpack" },
    { id: "description-input", value: "A durable backpack for outdoor adventures" },
    { id: "color-input", value: "Green" },
    { id: "volume-input", value: "35L" },
];
